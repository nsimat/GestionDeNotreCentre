@model GestionDeNotreCentre.Models.InstanceFormationViewModel

@{
    ViewBag.Title = "Inscription à la formation";
}

@{TempData["InscriptionData"] = Model;}

<h2>Inscription à la formation</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>Inscription à la formation</h4>*@
        <hr />
        <h3>Intitulé de la formation:</h3><br />
        @Model.Formation.Nom <br /><hr />
        <h3>Description:</h3><br />
        @Model.Formation.DescriptionFormation <br /><hr />
        <h3>Durée de la formation:</h3><br />
        Du @Model.InstanceFormation.DateDebut à @Model.InstanceFormation.DateFin <br /><hr />
        <h3>Personne de contact:</h3><br />
        La personne responsable pour cette formation est <b>@Model.InstanceFormation.Employe.Personne.Prenom @Model.InstanceFormation.Employe.Personne.Nom</b>.<br />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Confirmer votre inscription" class="btn btn-primary" id="btn-confirm" name="btn-confirm" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
