@model GestionDeCentreDAL.Models.Inscription

@{
    ViewBag.Title = "Inscription créée";
}

<h2>Merci de votre inscription! <br />Nous confirmerons votre inscription après sa validation ou non que nous vous enverrons par courrier électronique.</h2>

<div class="card" style="width: 100%">
    <div class="card-header">
        <h4>Voici le récapitulatif de votre inscription:</h4>
    </div>
    <table class="card-table table vertical">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayNameFor(model => model.IdInscription)</td>
                <td>@Html.DisplayFor(model => model.IdInscription)</td>
            </tr>
            

            <tr>
                <td>@Html.DisplayNameFor(model => model.DateInscription)</td>
                <td>@Html.DisplayFor(model => model.DateInscription)</td>
            </tr>
            

            <tr>
                <td>@Html.DisplayNameFor(model => model.DateValidation)</td>
                <td>@Html.DisplayFor(model => model.DateValidation)</td>
            </tr>
            

            <tr>
                <td>@Html.DisplayNameFor(model => model.IdInstanceFormation)</td>
                <td>@Html.DisplayFor(model => model.InstanceFormation.Formation.Nom)</td>
            </tr>

            

            <tr>
                <td>@Html.DisplayNameFor(model => model.IdStatigiaire)</td>
                <td>@Html.DisplayFor(model => model.Personne.FullName)</td>
            </tr>
            

            <tr>
                <td>@Html.DisplayNameFor(model => model.IdEmploye)</td>
                <td>@Html.DisplayFor(model => model.Employe.Personne.FullName)</td>
            </tr>
            
        </tbody>
    </table>
</div>

